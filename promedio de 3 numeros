void main()

{
	float a,b,c;
	double P;

	cout<< "ingrese los tres numeros a promediar:"<<endl;
	cin>>a;
	cin>>b;
	cin>>c;

	P= (a+b+c)/3;

	cout<< "el promedio de los tres numeros ingresados es:"<< P;

